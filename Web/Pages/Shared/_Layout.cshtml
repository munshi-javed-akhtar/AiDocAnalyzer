<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] — DocMind</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Syne:wght@400;500;600;700;800&family=DM+Mono:ital,wght@0,300;0,400;0,500;1,300&family=DM+Sans:ital,opsz,wght@0,9..40,300;0,9..40,400;0,9..40,500;1,9..40,300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/app.css" />
</head>
<body>
    <div class="grain"></div>

    <nav class="nav">
        <a href="/" class="nav-brand">
            <span class="nav-brand-icon">◈</span>
            <span class="nav-brand-text">DocMind</span>
        </a>
        <div class="nav-links">
            <a href="/" class="nav-link @(ViewData["Page"]?.ToString() == "home" ? "active" : "")">Upload</a>
            <a href="/Search" class="nav-link @(ViewData["Page"]?.ToString() == "search" ? "active" : "")">Search</a>
            <a href="/Ask" class="nav-link @(ViewData["Page"]?.ToString() == "ask" ? "active" : "")">Ask AI</a>
        </div>
        <div class="nav-status" id="apiStatus">
            <span class="status-dot"></span>
            <span class="status-text">connecting...</span>
        </div>
    </nav>

    <main class="main">
        @RenderBody()
    </main>

    <footer class="footer">
        <span>DocMind — Local RAG Pipeline</span>
        <span class="footer-sep">◈</span>
        <span>Ollama · Qdrant · PostgreSQL</span>
    </footer>

    <script src="~/js/app.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
